---
import "@fontsource-variable/inter";
import "~/styles/index.css";
import Header from "~/components/header.astro";
import MainBlock from "~/components/main-block.astro";
import AboutBlock from "~/components/about-block.astro";
import ForTeachers from "~/components/for-teachers.astro";
import ForStudent from "~/components/for-student.astro";
import WhyLifted from "~/components/why-lifted.astro";
import Courses from "~/components/courses.astro";
import JoinUs from "~/components/join-us.astro";
import Footer from "~/components/footer.astro";
import Youtube from "~/components/youtube.astro";

const { generator, site } = Astro;
const image = new URL("social.png", site);
const description =
  "LiftEd - образовательная платформа для учителей и учеников на базе искусственного интеллекта";
---

<!doctype html>
<html lang="ru" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <meta name="generator" content={generator} />

    <title>LiftEd - Образовательная платформа</title>
    <meta name="description" content={description} />

    <!-- social media -->
    <meta property="og:title" content="LiftEd" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
    <!-- Google Tag Manager -->
    <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-TVLZ3W87');</script>
    <!-- End Google Tag Manager -->
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base"
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TVLZ3W87"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Header />
    <MainBlock />
    <AboutBlock />
    <ForTeachers />
    <ForStudent />
    <WhyLifted />
    <Courses />
    <Youtube />
    <JoinUs />
    <Footer />
  </body>
</html>
