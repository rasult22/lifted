---
import Button from './ui/button.astro';

// Menu items array
const menuItems = [
  { text: 'Главная', href: '/' },
  { text: 'О платформе', href: '/about' },
  { text: 'Для учителей', href: '/teachers' },
  { text: 'Для учеников', href: '/students' },
  { text: 'Курсы', href: '/courses' }
];
---

<header class="bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center py-6">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center py-1">
          <img src="/optimized/lifted-icon.webp" alt="LiftEd" class="max-w-[280px]" />
        </a>
      </div>

      <!-- Navigation Menu -->
      <nav class="hidden md:flex items-center space-x-8">
        {menuItems.map((item) => (
          <a 
            href={item.href} 
            class="text-gray-600 hover:text-[#076EFF] text-[16px] leading-[24px] font-semibold transition-colors duration-200 relative group"
          >
            {item.text}
          </a>
        ))}
      </nav>

      <!-- Register Button -->
      <div class="flex items-center">
        <Button href="https://lifted.kz/auth/sign-in">
          Зарегистрироваться
        </Button>
      </div>
   
    </div>
  </div>
</header>